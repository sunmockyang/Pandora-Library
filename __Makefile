OBJ = main.o PLSControl.o Menu.o Book.o Patron.o Library.o Storage.o PDeque.o Name.o BookArray.o
CC_FLAGS = -w
EXE = a3

$(EXE):	$(OBJ)
	g++ -o $(EXE) $(OBJ)

main.o:	main.cpp
	g++ -c $(CC_FLAGS) main.cpp

PLSControl.o:	PLSControl.cpp PLSControl.h
	g++ -c $(CC_FLAGS) PLSControl.cpp

Menu.o:	Menu.cpp Menu.h
	g++ -c $(CC_FLAGS) Menu.cpp

Book.o:	Book.cpp Book.h
	g++ -c $(CC_FLAGS) Book.cpp

Patron.o:	Patron.cpp Patron.h
	g++ -c $(CC_FLAGS) Patron.cpp

Library.o:	Library.cpp Library.h
	g++ -c $(CC_FLAGS) Library.cpp

Storage.o:	Storage.cpp Storage.h
	g++ -c $(CC_FLAGS) Storage.cpp

PDeque.o:	PDeque.cpp PDeque.h
	g++ -c $(CC_FLAGS) PDeque.cpp

BookArray.o:	BookArray.cpp BookArray.h
	g++ -c $(CC_FLAGS) BookArray.cpp

Name.o:	Name.cpp Name.h
	g++ -c $(CC_FLAGS) Name.cpp

clean:
	rm -f $(EXE) *.o

package: clean
	tar -cf ../COMP2404_A3_SunmockYang.tar *.h *.cpp Makefile README